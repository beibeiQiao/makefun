@import "../../wxParse/wxParse.wxss";
swiper{
  margin: 0 auto;
  width:100%;
  height:500rpx
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.swiper-container{
  width: 100%;
  height: 500rpx;
  position: relative;  
}
.slide-image{
  position:absolute;
  width:100%;
  height: 500rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #000;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}  
.swiper-container .dots .dot.active{  
  opacity: .6;
}
.activity-details{
  margin: 0rpx auto;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}
.activity-details image{
  width:50rpx;
  height:50rpx;
}
.share{
  float:right;
}
.activities-info{
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 230rpx;
  width: 100%;
  position: relative;
}
.activities-info image {
  margin: 30rpx auto;
  width: 80%;
  position: absolute;
}
.label-title{
  color:#000000;
  padding: 30rpx;
}
.activities-text{
  padding: 0 20rpx;
  font-size:30rpx;
  color:#666666;
  line-height: 56rpx;
  text-indent: 20rpx;
  text-align: left;
  margin: 15rpx;
}
.base-line{
  font-size:30rpx;
  color:#666666;
  margin: 50rpx auto;
  height: 2rpx;
  background-color:#666666;
}
.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}
.footer-box .join_chart{
  text-align: center;
  width: 385rpx;
  height: 100%;
  line-height: 100rpx;
  background-color: #42d1ca;
  color:#fff;
  font-size: 34rpx;
}
.footer-box .join{
  text-align: center;
  height: 100%;
  width: 385rpx;
  line-height: 100rpx;
  background-color: #18a889;
  color:#fff;
  font-size: 34rpx;
}
