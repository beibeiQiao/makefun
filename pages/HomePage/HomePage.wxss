/* pages/HomePage/HomePage.wxss */
.inform{
  width: 100%;
  height: 450rpx;
  position: relative;  
}
swiper{
  margin: 0 auto;
  width:100%;
  height:450rpx
}
.slide-image{
  width:100%;
  height:450rpx;
}
.inform .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.inform .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;   
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}  
.swiper-container .dots .dot.active{  
  opacity: .6;
}
.search{
  padding: 25rpx;
  height: 45rpx;
  width: 94%;
  background: rgba(195, 196, 191, 0.5);
 
  line-height: 45rpx;
}
.search-text{
  font-size: 30rpx;
  margin-left: 80rpx;
  color:rgb(110, 106, 106);
}
.search-icon{
  float:left;
  height: 40rpx;
  width: 40rpx;
}
.categoryList{
  width: 100%;
  height: 350rpx;
  border-bottom:20rpx solid #f4f4f4; 
}
.category-info{
  display: inline-block;
  text-align: center;
  position: relative;
  margin-top: 20rpx;
  height: 150rpx;
  width: 33%;
}
.category-image{
  width: 100rpx;
  height: 100rpx;
}
.category-text{
  font-size: 28rpx;
  font-style:unset;
  color: #696464;
  width: 100%;
  line-height: 30rpx
}
.title{
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  font-weight: 600;
}
.society{
  height:250rpx;
  border: 1rpx solid #ECECEC;
  padding:10rpx 0;
}
.society-image{
  float:left;
  width:35%;
}
.society-image image{
  width: 200rpx;
  height: 200rpx;
  padding:20rpx;
}
.society-info{
  float:right;
  width:65%;
}
.society-info-name{
  width: 300rpx;
  height: 50rpx;
  font-size:30rpx;
  line-height: 50rpx;
  margin:20rpx;
}
.society-short-info{
  color:#696464;
  font-size:25rpx;
}
