/* pages/index/nearby.wxss */
.heard-location-text{
  position: absolute;
  overflow: hidden;
}
.heard{
  justify-content: space-around;
  display: flex;
  width: 100%;
  height: 80rpx;
}
.heard-location-icon{
  position: absolute;
  top: 12rpx;
  height: 25rpx;
  width: 25rpx;
}
.heard-location-text{
  left: 47rpx;
  top: 9rpx;
  height: 30rpx;
  width: 190rpx;
  white-space:nowrap;
  text-overflow: ellipsis;
}
.heard-location{
  position: relative;
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  margin: 10rpx;
  width: 250rpx;
  height: 40rpx;
  background: rgba(127, 186, 184, 0.791);
  color: white;
  border-radius: 20rpx;
}
.heard-location:after{
  content: '';
  position: absolute;
  top: 20rpx;
  left: 250rpx; 
  width: 8rpx;
  height: 8rpx;
  border: 3rpx solid #fff;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
}
.heard-slogan-image{
  width:400rpx;
  height:80rpx;
}
.heard-slogan{
  margin: 0rpx;
  height: 50rpx;
  width: 400rpx;
  border-radius:20rpx;
  line-height: 40rpx;
}
.title{
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  font-weight: 600;
}

.activities-list{
  font-size: 25rpx;
  display: flex;
  width: 100%;
  padding: 10rpx 0;   
  border-bottom: 1rpx solid #ECECEC;
  color: #6D6D6D;
  justify-content: space-between;
}
.activities-info-name{
  color: black;
  font-size: 35rpx;
  margin-bottom: 10rpx;
}
.activities-image{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
}
.activities-info{
  margin: 15rpx;
  flex: 1;
}
.activities-info-name{
  display: flex;
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.activities-info-participant_num{
  color: rgb(29, 140, 127);
 
  height: 50rpx;
}
.activities-info-deadline{
  
  height: 50rpx;
}
.activities-info-distance{
  flex-direction: column;
  text-align: right;
  justify-content: center;
}
